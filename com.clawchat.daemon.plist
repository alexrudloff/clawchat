<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.clawchat.daemon</string>

    <key>ProgramArguments</key>
    <array>
        <string>__CLAWCHAT_PATH__</string>
        <string>daemon</string>
        <string>start</string>
        <string>--password-file</string>
        <string>__HOME__/.clawchat/password</string>
        <string>--port</string>
        <string>9000</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>__HOME__/.clawchat/daemon.log</string>

    <key>StandardErrorPath</key>
    <string>__HOME__/.clawchat/daemon.error.log</string>

    <key>WorkingDirectory</key>
    <string>__HOME__/.clawchat</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin</string>
    </dict>
</dict>
</plist>
